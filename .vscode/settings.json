{
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.sortImports": "explicit"
        }
    },
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "black-formatter.args": [
        "--line-length=100",
        "--preview",
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
}